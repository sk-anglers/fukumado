# ============================================
# ふくまど！ 環境変数設定例
# ============================================

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
# Renderから提供される接続文字列
# 形式: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL="postgresql://user:password@hostname.render.com:5432/database_name"

# --------------------------------------------
# Redis (Cache & Session)
# --------------------------------------------
# Renderから提供されるRedis接続文字列
# 形式: redis://user:password@hostname:port
REDIS_URL="redis://red-xxxxxxxxxxxxx:6379"

# --------------------------------------------
# Server Configuration
# --------------------------------------------
PORT=4000
NODE_ENV=production

# セッション秘密鍵（ランダムな文字列を生成して使用）
SESSION_SECRET="your-random-secret-key-here"

# --------------------------------------------
# Frontend URLs
# --------------------------------------------
FRONTEND_URL="https://fukumado.jp"
ADMIN_FRONTEND_URL="https://admin.fukumado.jp"
API_URL="https://api.fukumado.jp"

# --------------------------------------------
# YouTube API (OAuth 2.0)
# --------------------------------------------
# Google Cloud Console から取得
# https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CLIENT_ID="your-google-oauth-client-id.apps.googleusercontent.com"
YOUTUBE_CLIENT_SECRET="your-google-oauth-client-secret"
YOUTUBE_REDIRECT_URI="https://api.fukumado.jp/auth/google/callback"

# --------------------------------------------
# Twitch API (OAuth 2.0)
# --------------------------------------------
# Twitch Developer Console から取得
# https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID="your-twitch-client-id"
TWITCH_CLIENT_SECRET="your-twitch-client-secret"
TWITCH_REDIRECT_URI="https://api.fukumado.jp/auth/twitch/callback"

# --------------------------------------------
# Admin Dashboard
# --------------------------------------------
# 管理ダッシュボードのパスワード（16文字以上推奨）
ADMIN_PASSWORD="your-strong-admin-password"

# 管理API認証キー（自動生成 or ランダム文字列）
ADMIN_API_KEY="your-admin-api-key"

# --------------------------------------------
# Admin Server Configuration
# --------------------------------------------
ADMIN_USERNAME="admin"
MAIN_BACKEND_URL="https://api.fukumado.jp"
MAIN_API_KEY="your-admin-api-key"  # サーバーのADMIN_API_KEYと同じ値

# --------------------------------------------
# Optional: Development Settings
# --------------------------------------------
# ローカル開発時は以下を使用
# DATABASE_URL="postgresql://postgres:password@localhost:5432/fukumado_dev"
# REDIS_URL="redis://localhost:6379"
# FRONTEND_URL="http://localhost:5173"
# ADMIN_FRONTEND_URL="http://localhost:5174"
# API_URL="http://localhost:4000"
# YOUTUBE_REDIRECT_URI="http://localhost:4000/auth/google/callback"
# TWITCH_REDIRECT_URI="http://localhost:4000/auth/twitch/callback"

# --------------------------------------------
# Optional: Beta Environment
# --------------------------------------------
# ベータ環境用の設定（別途設定する場合）
# FRONTEND_URL="https://beta.fukumado.jp"
# ADMIN_FRONTEND_URL="https://beta-admin.fukumado.jp"
# API_URL="https://beta-api.fukumado.jp"
# YOUTUBE_REDIRECT_URI="https://beta-api.fukumado.jp/auth/google/callback"
# TWITCH_REDIRECT_URI="https://beta-api.fukumado.jp/auth/twitch/callback"
